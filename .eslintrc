{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "quotes": [2, "double", { "avoidEscape": true }],
    "semi": [2, "never"],
    "no-unused-vars": "off",
    "no-undef": "off",
    "indent": ["error", "tab"]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "jest": {
      "version": 27
    }
  },
  "parser": "@babel/eslint-parser"
}